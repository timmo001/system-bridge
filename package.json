{
  "name": "system-bridge",
  "version": "2.0.0",
  "description": "A bridge for your systems",
  "private": true,
  "author": {
    "name": "Aidan Timson <Timmo>",
    "email": "contact@timmo.xyz",
    "url": "https://system-bridge.timmo.dev"
  },
  "keywords": [
    "system",
    "bridge",
    "api",
    "rest",
    "websocket"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/timmo001/system-bridge"
  },
  "license": "MIT",
  "scripts": {
    "build": "yarn build:frontend && yarn build:api",
    "build:api": "rimraf dist && nest build",
    "build:frontend": "cd frontend && yarn build && shx cp -r build/* ../public/app",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "install:all": "yarn install && cd frontend && yarn install",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "make": "yarn build",
    "start": "concurrently -k \"yarn start:api\" \"yarn start:frontend\"",
    "start:dev": "concurrently -k \"yarn start:api:dev\" \"yarn start:frontend\"",
    "start:prod": "node dist/main",
    "start:api": "cross-env NODE_ENV=development nest start",
    "start:api:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:api:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:frontend": "cd frontend && cross-env BROWSER=none yarn start",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:junit": "jest --coverage --ci --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@nestjs/common": "7.6.18",
    "@nestjs/core": "7.6.18",
    "@nestjs/platform-express": "7.6.18",
    "@nestjs/platform-ws": "7.6.18",
    "@nestjs/swagger": "4.8.1",
    "@nestjs/typeorm": "7.1.5",
    "@nestjs/websockets": "7.6.18",
    "better-sqlite3": "7.4.1",
    "brightness": "3.0.0",
    "desktop-idle": "1.3.0",
    "dotenv": "10.0.0",
    "execa": "5.1.1",
    "helmet": "4.6.0",
    "loudness": "0.4.1",
    "nest-winston": "1.5.0",
    "node-notifier": "10.0.0",
    "open": "8.2.1",
    "peer": "0.6.1",
    "query-string": "7.0.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "robotjs": "0.6.0",
    "rxjs": "7.1.0",
    "swagger-ui-express": "4.1.6",
    "systeminformation": "5.7.7",
    "systray2": "2.1.2",
    "typeorm": "0.2.34",
    "uuid": "8.3.2",
    "winston": "3.3.3",
    "ws": "7.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "7.6.0",
    "@nestjs/schematics": "7.3.1",
    "@nestjs/testing": "7.6.18",
    "@types/express": "4.17.12",
    "@types/helmet": "4.0.0",
    "@types/jest": "26.0.23",
    "@types/mdns": "0.0.33",
    "@types/node": "15.12.4",
    "@types/node-notifier": "8.0.0",
    "@types/supertest": "2.0.11",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.28.0",
    "@typescript-eslint/parser": "4.28.0",
    "concurrently": "6.2.0",
    "cross-env": "7.0.3",
    "eslint": "7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "27.0.5",
    "jest-junit": "12.2.0",
    "prettier": "2.3.2",
    "shx": "0.3.3",
    "supertest": "6.1.3",
    "ts-jest": "27.0.3",
    "ts-loader": "9.2.3",
    "ts-node": "10.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.3.4"
  },
  "optionalDependencies": {
    "mdns": "2.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "node"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
