{
  "name": "system-bridge",
  "productName": "System Bridge",
  "version": "1.0.0",
  "description": "System Bridge",
  "main": "dist/index.js",
  "scripts": {
    "build:configuration": "cd configuration && yarn build",
    "compile": "shx rm -rf dist/ && tsc",
    "install:all": "yarn install && cd configuration && yarn install",
    "make": "yarn build:configuration && electron-forge make",
    "package": "yarn build:configuration && electron-forge package",
    "publish": "yarn build:configuration && electron-forge publish",
    "start": "concurrently -k \"yarn start:configuration\" \"wait-on tcp:3000 && yarn start:app\"",
    "start:dev": "concurrently -k \"yarn start:configuration\" \"wait-on tcp:3000 && yarn start:app:dev\"",
    "start:app": "yarn compile && electron-forge start",
    "start:app:dev": "nodemon --ext ts,js --watch src --exec \"yarn start:app\"",
    "start:configuration": "cd configuration && cross-env BROWSER=none yarn start",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [
    "system",
    "bridge",
    "api",
    "rest",
    "websocket"
  ],
  "author": {
    "name": "Timmo",
    "email": "contact@timmo.xyz",
    "url": "https://system-bridge.timmo.dev"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "system-bridge",
        "executableName": "system-bridge"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-zip",
          "config": {},
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "directories": {
    "lib": "src",
    "test": "test/",
    "config": "config/"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.54",
    "@electron-forge/maker-deb": "6.0.0-beta.54",
    "@electron-forge/maker-rpm": "6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "6.0.0-beta.54",
    "@electron-forge/maker-zip": "6.0.0-beta.54",
    "@types/compression": "1.7.0",
    "@types/cors": "2.8.10",
    "@types/electron-devtools-installer": "2.2.0",
    "@types/helmet": "4.0.0",
    "@types/mdns": "0.0.33",
    "@types/serve-favicon": "2.5.2",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "concurrently": "6.0.0",
    "cross-env": "7.0.3",
    "electron": "11.3.0",
    "eslint": "7.20.0",
    "eslint-plugin-import": "2.22.1",
    "nodemon": "2.0.7",
    "shx": "0.3.3",
    "typescript": "4.2.2",
    "wait-on": "5.2.1"
  },
  "dependencies": {
    "@feathersjs/authentication": "4.5.11",
    "@feathersjs/configuration": "4.5.11",
    "@feathersjs/express": "4.5.11",
    "@feathersjs/feathers": "4.5.11",
    "@feathersjs/socketio": "4.5.11",
    "@mdi/js": "5.9.55",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "electron-devtools-installer": "3.1.1",
    "electron-is-dev": "1.2.0",
    "electron-settings": "4.0.2",
    "electron-squirrel-startup": "1.0.0",
    "execa": "5.0.0",
    "express": "4.17.1",
    "feathers-swagger": "1.2.1",
    "helmet": "4.4.1",
    "serve-favicon": "2.5.0",
    "systeminformation": "5.5.0",
    "winston": "3.3.3"
  },
  "optionalDependencies": {
    "mdns": "2.7.2"
  }
}
