{
  "name": "system-bridge",
  "version": "2.5.0",
  "description": "A bridge for your systems",
  "private": true,
  "author": {
    "name": "Aidan Timson <Timmo>",
    "email": "contact@timmo.xyz",
    "url": "https://system-bridge.timmo.dev"
  },
  "keywords": [
    "system",
    "bridge"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/timmo001/system-bridge"
  },
  "license": "MIT",
  "bin": "dist/main.js",
  "scripts": {
    "build": "yarn build:frontend && yarn build:app && yarn build:tray",
    "build:app": "rimraf dist && nest build",
    "build:frontend": "cd frontend && yarn build && shx cp -r build/* ../public/app",
    "build:tray": "cd tray && yarn build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "install:all": "yarn install && cd frontend && yarn install && cd ../tray && yarn install",
    "install:all:ci": "yarn install --pure-lockfile && cd frontend && yarn install --pure-lockfile && cd ../tray && yarn install --pure-lockfile",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "package": "rimraf out && yarn build && node scripts/package.js",
    "start": "concurrently -k \"yarn start:app\" \"yarn start:tray\" \"yarn start:frontend\"",
    "start:dev": "concurrently -k \"yarn start:app:dev\" \"yarn start:tray\" \"yarn start:frontend\"",
    "start:prod": "node dist/main",
    "start:app": "cross-env NODE_ENV=development nest start",
    "start:app:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:app:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:frontend": "cd frontend && cross-env BROWSER=none yarn start",
    "start:tray": "cd tray && cross-env NODE_ENV=development yarn start",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:junit": "jest --coverage --ci --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@nestjs/common": "8.0.5",
    "@nestjs/core": "8.0.5",
    "@nestjs/platform-express": "8.0.5",
    "@nestjs/platform-ws": "8.0.5",
    "@nestjs/swagger": "5.0.9",
    "@nestjs/typeorm": "8.0.2",
    "@nestjs/websockets": "8.0.5",
    "auto-launch": "5.0.5",
    "axios": "0.21.1",
    "better-sqlite3": "7.4.3",
    "desktop-idle": "1.3.0",
    "dotenv": "10.0.0",
    "execa": "5.1.1",
    "helmet": "4.6.0",
    "loudness": "0.4.1",
    "mqtt": "4.2.8",
    "nest-winston": "1.5.0",
    "node-notifier": "10.0.0",
    "open": "8.2.1",
    "peer": "0.6.1",
    "query-string": "7.0.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "robotjs": "0.6.0",
    "rxjs": "7.3.0",
    "semver": "7.3.5",
    "swagger-ui-express": "4.1.6",
    "system-bridge-windows-sensors": "1.2.1",
    "systeminformation": "5.8.0",
    "typeorm": "0.2.36",
    "uuid": "8.3.2",
    "winston": "3.3.3",
    "ws": "7.5.3"
  },
  "devDependencies": {
    "@nestjs/cli": "8.1.1",
    "@nestjs/schematics": "8.0.2",
    "@nestjs/testing": "8.0.6",
    "@types/auto-launch": "5.0.2",
    "@types/express": "4.17.13",
    "@types/helmet": "4.0.0",
    "@types/jest": "26.0.24",
    "@types/mdns": "0.0.34",
    "@types/node": "16.4.12",
    "@types/node-notifier": "8.0.1",
    "@types/semver": "7.3.8",
    "@types/supertest": "2.0.11",
    "@types/uuid": "8.3.1",
    "@typescript-eslint/eslint-plugin": "4.29.0",
    "@typescript-eslint/parser": "4.29.0",
    "concurrently": "6.2.0",
    "cross-env": "7.0.3",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "27.0.6",
    "jest-junit": "12.2.0",
    "pkg": "5.3.1",
    "prettier": "2.3.2",
    "shx": "0.3.3",
    "supertest": "6.1.4",
    "ts-jest": "27.0.4",
    "ts-loader": "9.2.5",
    "ts-node": "10.1.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.3.5"
  },
  "optionalDependencies": {
    "mdns": "2.7.2",
    "node-hide-console-window": "2.1.0",
    "win-audio": "2.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "node"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "pkg": {
    "assets": [
      "node_modules/**/*",
      "public/**/*"
    ],
    "outputPath": "out",
    "scripts": "dist/main.js",
    "targets": [
      "host"
    ]
  }
}
