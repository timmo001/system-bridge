{
  "name": "system-bridge",
  "productName": "System Bridge",
  "description": "A bridge for your systems",
  "version": "1.8.0",
  "main": "dist/index.js",
  "types": "lib/",
  "scripts": {
    "build:frontend": "cd frontend && yarn build",
    "compile": "shx rm -rf dist/ && tsc",
    "install:all": "yarn install && cd api && yarn install && cd ../frontend && yarn install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:junit": "jest --coverage --ci --reporters=default --reporters=jest-junit",
    "make": "yarn compile && yarn build:frontend && cross-env electron-forge make",
    "package": "yarn compile && yarn build:frontend && electron-forge package",
    "publish": "yarn compile && yarn build:frontend && electron-forge publish",
    "start": "concurrently -k \"yarn start:api\" \"yarn start:frontend\" \"wait-on tcp:3000 && yarn start:app\"",
    "start:dev": "concurrently -k \"yarn start:api:dev\" \"yarn start:frontend\" \"wait-on tcp:3000 && yarn start:app:dev\"",
    "start:prod": "yarn build:frontend && concurrently -k \"yarn start:api:prod\" \"yarn start:app:prod\"",
    "start:app": "yarn compile && cross-env ELECTRON_IS_DEV=1 electron-forge start",
    "start:app:dev": "nodemon --ext ts,js --watch src --exec \"yarn start:app\"",
    "start:app:prod": "yarn compile && cross-env electron-forge start",
    "start:api": "cd api && yarn start",
    "start:api:dev": "cd api && yarn start:dev",
    "start:api:debug": "cd api && yarn start:debug",
    "start:api:prod": "cd api && yarn start:prod",
    "start:frontend": "cd frontend && cross-env BROWSER=none yarn start",
    "eslint": "eslint ./src --config .eslintrc.json --ext .ts"
  },
  "keywords": [
    "system",
    "bridge",
    "api",
    "rest",
    "websocket"
  ],
  "author": {
    "name": "Timmo",
    "email": "contact@timmo.xyz",
    "url": "https://system-bridge.timmo.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/timmo001/system-bridge"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "name": "system-bridge",
        "executableName": "system-bridge",
        "icon": "public/system-bridge-circle.icns",
        "setupIcon": "public/system-bridge-circle.icns",
        "win32metadata": {
          "requested-execution-level": "highestAvailable"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "categories": [
                "Utility"
              ],
              "description": "A bridge for your systems",
              "icon": "public/system-bridge-circle.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "icon": "public/system-bridge-circle.icns"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "categories": [
                "Utility"
              ],
              "description": "A bridge for your systems",
              "icon": "public/system-bridge-circle.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "executableName": "SystemBridge",
            "icon": "public/system-bridge-circle.ico",
            "setupIcon": "public/system-bridge-circle.ico",
            "loadingGif": "public/loading.gif"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "timmo001",
              "name": "system-bridge"
            }
          }
        }
      ]
    }
  },
  "directories": {
    "lib": "src",
    "test": "test/",
    "config": "config/"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.57",
    "@electron-forge/maker-deb": "6.0.0-beta.57",
    "@electron-forge/maker-dmg": "6.0.0-beta.57",
    "@electron-forge/maker-rpm": "6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "6.0.0-beta.57",
    "@electron-forge/maker-zip": "6.0.0-beta.57",
    "@electron-forge/publisher-github": "6.0.0-beta.57",
    "@types/electron-devtools-installer": "2.2.0",
    "@types/semver": "7.3.6",
    "@types/uuid": "8.3.0",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "4.27.0",
    "@typescript-eslint/parser": "4.27.0",
    "concurrently": "6.2.0",
    "cross-env": "7.0.3",
    "electron": "13.1.2",
    "electron-rebuild": "2.3.5",
    "eslint": "7.28.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "27.0.4",
    "jest-junit": "12.2.0",
    "nodemon": "2.0.7",
    "prettier": "2.3.1",
    "shx": "0.3.3",
    "ts-jest": "27.0.3",
    "ts-loader": "9.2.3",
    "ts-node": "10.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.3.2",
    "wait-on": "5.3.0"
  },
  "dependencies": {
    "@mdi/js": "5.9.55",
    "better-sqlite3": "7.4.1",
    "electron-debug": "3.2.0",
    "electron-devtools-installer": "3.2.0",
    "electron-settings": "4.0.2",
    "execa": "5.1.1",
    "music-metadata": "7.8.6",
    "peer": "0.6.1",
    "query-string": "7.0.0",
    "semver": "7.3.5",
    "typeorm": "0.2.34",
    "uuid": "8.3.2"
  }
}
