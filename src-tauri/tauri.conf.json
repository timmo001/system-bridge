{
  "productName": "System Bridge",
  "version": "4.1.0",
  "identifier": "dev.timmo.systembridge",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "data",
        "title": "Data | System Bridge",
        "focus": true,
        "visible": true,
        "width": 1280,
        "height": 720
      },
      {
        "label": "settings",
        "title": "Settings | System Bridge",
        "focus": true,
        "visible": false,
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "menuOnLeftClick": true,
      "title": "System Bridge",
      "tooltip": "System Bridge"
    }
  },
  "bundle": {
    "active": true,
    "externalBin": [],
    "resources": [
      "../dist/systembridgebackend/*",
      "../dist/systembridgecli/*",
      "../resources/system-bridge.ico",
      "../resources/system-bridge.png",
      "../resources/system-bridge.svg"
    ],
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
