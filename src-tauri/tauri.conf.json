{
  "productName": "System Bridge",
  "version": "5.0.0",
  "identifier": "dev.timmo.systembridge",
  "build": {
    "beforeBuildCommand": "bun run build",
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "app": {
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main",
      "iconAsTemplate": false,
      "iconPath": "icons/icon.png",
      "menuOnLeftClick": true,
      "title": "System Bridge",
      "tooltip": "System Bridge"
    }
  },
  "bundle": {
    "active": true,
    "shortDescription": "System Bridge",
    "longDescription": "System Bridge - A bridge for your systems.",
    "category": "Utility",
    "license": "Apache-2.0",
    "licenseFile": "../LICENSE",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}