{
  "host": "localhost",
  "port": 9170,
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "ts": true,
  "authentication": {
    "entity": "user",
    "service": "users",
    "secret": "API_AUTH_SECRET",
    "authStrategies": ["jwt", "local"],
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "https://system-bridge.timmo.dev",
      "issuer": "feathers",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "local": {
      "usernameField": "username",
      "passwordField": "password"
    }
  },
  "nedb": "../db"
}
