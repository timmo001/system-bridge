<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LibreHardwareMonitorLib" Version="0.9.4" />
  </ItemGroup>

  <!-- Post-build events to copy DLLs to parent directory -->
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy &quot;$(TargetPath)&quot; &quot;$(ProjectDir)..\&quot;" />
    <Exec Command="if exist &quot;$(OutDir)LibreHardwareMonitorLib.dll&quot; copy &quot;$(OutDir)LibreHardwareMonitorLib.dll&quot; &quot;$(ProjectDir)..\&quot;" />
    <Exec Command="echo Post-build completed successfully" />
  </Target>

</Project>
