{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Notification",
  "properties": {
    "title": {
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "icon": {
      "type": "string"
    },
    "image": {
      "type": "string"
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "Notification Action",
        "properties": {
          "command": {
            "type": "string"
          },
          "label": {
            "type": "string"
          }
        },
        "required": ["command", "label"]
      }
    },
    "timeout": {
      "type": "number"
    }
  },
  "required": ["title"]
}
